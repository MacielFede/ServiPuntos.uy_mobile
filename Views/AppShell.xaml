<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ServiPuntos.uy_mobile.Views.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ServiPuntos.uy_mobile.Views"
    Title="ServiPuntos.uy"
    FlyoutBehavior="Disabled">

    <ShellContent
        Title="Bienvenido"
        ContentTemplate="{DataTemplate views:WelcomePage}"
        Route="WelcomePage"/>
    <TabBar       Shell.TabBarBackgroundColor="CornflowerBlue"
                  Shell.TabBarTitleColor="Black"
                  Shell.TabBarUnselectedColor="AntiqueWhite"
                  Shell.TabBarForegroundColor="Red">
        <ShellContent
            ContentTemplate="{DataTemplate views:HomePage}"
            Route="HomePage"
            Icon="home_icon.png"/>
        <ShellContent
            ContentTemplate="{DataTemplate views:FuelPricesPage}"
            Route="FuelPricesPage"
            Icon="gas_icon.png"/>
        <ShellContent
            ContentTemplate="{DataTemplate views:BranchesPage}"
            Route="BranchesPage"
            Icon="location_icon.png"/>
        <ShellContent
            ContentTemplate="{DataTemplate views:TransactionsHistoryPage}"
            Route="TransactionsHistoryPage"
            Icon="history_icon.png"/>
    </TabBar>

</Shell>
